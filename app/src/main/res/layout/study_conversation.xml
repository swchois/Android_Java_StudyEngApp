<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="#E7DEC9"
        android:scaleType="fitCenter"
        android:src="@drawable/pngegg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/btnNext"
        app:layout_constraintStart_toEndOf="@+id/btnPrev"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:backgroundTint="#E7DEC9"
        android:rotationY="180"
        android:scaleType="fitCenter"
        android:src="@drawable/pngegg"
        app:layout_constraintStart_toEndOf="@+id/tv1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/maintv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPrev" />

    <ImageButton
        android:id="@+id/btn_listen"
        android:layout_width="116dp"
        android:layout_height="88dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#AEBCC9"
        android:scaleType="fitCenter"
        android:src="@drawable/btnlisten"
        android:tint="#FAF9F7"
        app:layout_constraintTop_toBottomOf="@+id/maintv"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>